include ../modules/**/*.jade
include ../elements/**/*.jade

extends ../layouts/default

block meta
  title ginetta-academy
  //- TODO: add you page meta tags

block body
  section.about
    .row
      .small-6.small-centered.medium-6.medium-centered.large-2.large-uncentered.columns
        img(src=data.index.header.logo).float-left
    .row
      .small-8.columns.small-centered
        .teaser
          p= data.index.header.teaser
        .header
          h1= data.index.header.title
          p= data.index.header.subtitle
          // p= data.index.content

  section.benefits
    .row
      .small-8.columns.small-centered
        h2= data.index.benefits.title
        ul
          each val in data.index.benefits.content
            li= val

  section.testimonial
    .row
      .small-8.columns.small-centered
        .row
          .large-2.medium-2.small-12.columns.large-uncentered.medium-uncentered.small-centered
            img(src=data.index.testimonial.image).avatar
          .large-10.medium-10.small-12.columns
            blockquote= data.index.testimonial.text
            strong= data.index.testimonial.name

  section.competences
    .row
      .small-8.columns.small-centered
        .competences-header
          h2= data.index.competences.title
          p= data.index.competences.intro
        .competences-listing
          ul
            each item in data.index.competences.items
              .row
                li
                .small-12.columns.large-3.medium-3
                  img(src=item.image)
                .small-12.columns.large-9.medium-9
                  h3= item.subtitle
                  p= item.text

  footer
    .row
      .small-8.columsn.small-centered.text-center
        p= data.index.footer
